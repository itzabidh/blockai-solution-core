RewriteEngine On
RewriteBase /

# 1. Map clean URL to .php file
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)$ $1.php [L]

# 2. Prevent 404 for existing .php files if accessed without extension
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^\ ]+)\.php\ HTTP/
RewriteRule ^(.+)\.php$ /$1 [R=301,L]
